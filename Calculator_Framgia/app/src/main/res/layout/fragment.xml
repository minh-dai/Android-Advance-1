<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a3a3a3">

    <TableLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/txtAC"
                style="@style/CustomNumberRight"
                android:text="AC" />

            <TextView
                android:id="@+id/txtAm"
                style="@style/CustomNumberRight"
                android:text="+/-" />

            <TextView
                android:id="@+id/txtChiaDu"
                style="@style/CustomNumberRight"
                android:text="%" />

            <TextView
                android:id="@+id/txtChia"
                style="@style/CustomDau"
                android:background="@color/colorDau"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/txt7"
                style="@style/CustomNumberRight"
                android:text="7" />

            <TextView
                android:id="@+id/txt8"
                style="@style/CustomNumberRight"
                android:text="8" />

            <TextView
                android:id="@+id/txt9"
                style="@style/CustomNumberRight"
                android:text="9" />

            <TextView
                android:id="@+id/txtNhan"
                style="@style/CustomDau"
                android:background="@color/colorDau"
                android:text="*" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/txt4"
                style="@style/CustomNumberLeft"
                android:text="4" />

            <TextView
                android:id="@+id/txt5"
                style="@style/CustomNumberRight"
                android:text="5" />

            <TextView
                android:id="@+id/txt6"
                style="@style/CustomNumberRight"
                android:text="6" />

            <TextView
                android:id="@+id/txtTru"
                style="@style/CustomDau"
                android:background="@color/colorDau"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/txt1"
                style="@style/CustomNumberRight"
                android:text="1" />

            <TextView
                android:id="@+id/txt2"
                style="@style/CustomNumberRight"
                android:text="2" />

            <TextView
                android:id="@+id/txt3"
                style="@style/CustomNumberRight"
                android:text="3" />

            <TextView
                android:id="@+id/txtCong"
                style="@style/CustomDau"
                android:background="@color/colorDau"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt0"
                style="@style/CustomFontZero"
                android:layout_span="2"
                android:background="#d2d2d2"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/txtCham"
                android:layout_height="60sp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#d2d2d2"
                android:gravity="center"
                android:text="."
                android:textColor="#000000"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/txtBang"
                style="@style/CustomDau"
                android:background="@color/colorDau"
                android:text="=" />
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab"
        android:layout_alignParentTop="true"
        android:gravity="right|bottom"
        android:hint="0"
        android:scrollbars="vertical"
        android:textColor="#ffffff"
        android:textSize="35sp" />

</RelativeLayout>